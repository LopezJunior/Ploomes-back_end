generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid())
  name String
  email String @unique
  secretAnswer String
  password String
  wallet Float
  matches Int
  wins Int
  withdraws Int
  cards Card[]
  room Room[]
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model Room{
  id String @id @default(uuid())
  number Int
  user User @relation(fields: [userID],references: [id])
  userID String
  maxCards Int
  limitPrizeDraw Int
  limitRecord Int
  //rules enum
  limitUsers Int
  history Int[] 
  frequency Int
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model Card{
  id String @id @default(uuid())
  //matriz Int[][]
  user User @relation(fields: [userID],references: [id])
  userID String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}