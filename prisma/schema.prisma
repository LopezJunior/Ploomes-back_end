// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String   @unique
  email     String   @unique
  password  String
  wallet    Float?   @default(100)
  matches   Int?     @default(0)
  wins      Int?     @default(0)
  withdraws Int?     @default(0)
  cards     Card[]
  room      Room?    @relation(fields: [roomID], references: [id])
  roomID    String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model Room {
  id             String    @id @default(uuid())
  number         Int?
  users          User[]
  maxCards       Int?      @default(2) // n√∫mero de cartelas compradas
  limitPrizeDraw Int?      @default(50) // limite de sorteios
  limitRecord    Int?      @default(6)  // limite de bolas sorteadas aparecendo na tela
  limitUsers     Int?      @default(1)
  prizeOrder     Int[]
  price          Float?
  //rules enum
  historic       Int[]
  frequency      Int?      @default(10)
  createdAt      DateTime? @default(now()) @map("created_at")
  updatedAt      DateTime? @updatedAt @map("updated_at")
}

model Card {
  id        String   @id @default(uuid())
  vetor     Int[]
  markings  Int[]
  user      User     @relation(fields: [userID], references: [id])
  userID    String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}
